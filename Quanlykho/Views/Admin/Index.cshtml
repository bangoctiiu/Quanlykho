@model quanlykho.ViewModels.CreateUserViewModel
@{
    ViewData["Title"] = "Tạo người dùng mới";
    var roles = ViewBag.Roles as List<Microsoft.AspNetCore.Identity.IdentityRole>;
}
<h1>@ViewData["Title"]</h1>
<form asp-action="CreateUser" method="post" class="col-md-6">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group mb-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="RoleName">Quyền</label>
        <select asp-for="RoleName" class="form-select">
            <option value="">-- Chọn quyền --</option>
            @foreach (var role in roles)
            {
                <option value="@role.Name">@role.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Tạo</button>
</form>
